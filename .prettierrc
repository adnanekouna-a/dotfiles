# This file is in Yaml, because JSON doesn't have comments.
# I based my config on : https://prettier.io/docs/en/options.html

# Adds a comma when needed in comma-separated syntactic structures.
trailingComma: "es5"

# Sets the width of tabs to 4 spaces
tabWidth: 4  

# Uses tabs instead of spaces
useTabs: true

# Doesn't enforce semi-colons at the end of JavaScript lines
semi: false

# Uses single quotes instead of double quotes
singleQuote: true

# Doesn't add a space between brackets and content
bracketSpacing: false

# Doesn't let the last bracket of an HTML element alone in a line.
bracketSameLine: true
